generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 

model User{
  id Int @default(autoincrement()) @id
  name    String
  email     String @unique
  password    String 
  role        Role @default(VENDOR)
  createdAt     DateTime @default(now())
  jobsCreated   Job[]    @relation("CreatedJobs")
  vendor         Vendor?

}


model Vendor{
  bussiness_name String
  description String
  bussiness_address String
  isApproved   Boolean @default(false)
  proposal    Proposal[]
  Assignedjobs   AssignedJob[]   
  user           User @relation(fields: [userId] ,references: [id])
  userId          Int  @unique
  createdAt     DateTime @default(now())

 
}


model Job {
  id Int @default(autoincrement()) @id
  title String
  description String
  price Float
  createdBy    User   @relation("CreatedJobs", fields: [createdById], references: [id])
  createdById  Int
  proposal   Proposal[]
  isAssigned   Boolean  @default(false) // Indicates if the job has been given out
  assigned      AssignedJob?
  createdAt DateTime @default(now())
}


model Proposal{
  id Int @default(autoincrement()) @id
  vendor  Vendor @relation(fields: [vendorId],references: [userId])
  vendorId Int
  job  Job @relation(fields: [jobId],references: [id])
  description String
  price Float
  jobId Int
  assigned   AssignedJob?
  isAssigned Boolean  @default(false)
  createdAt DateTime @default(now())
}


model AssignedJob{
  vendor Vendor @relation(fields: [vendorId],references: [userId])
  vendorId Int
  proposal Proposal @relation(fields: [proposalId],references: [id])
  proposalId Int @unique 
  job    Job @relation(fields: [jobId],references: [id])
  jobId Int @unique

}


enum Role{
  ADMIN
  VENDOR
}