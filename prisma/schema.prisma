generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Vendor{
  id Int @default(autoincrement()) @id
  prod_name String
  description String
  password String
  email  String @unique
  role    Role @default(USER)
  isVerified Boolean @default(false)
  proposal    Proposal[]
  jobsAssigned  Job[]    @relation("AssignedJobs")
  jobsCreated   Job[]    @relation("CreatedJobs")

}


model Job {
  id Int @default(autoincrement()) @id
  title String
  description String
  createdBy    Vendor   @relation("CreatedJobs", fields: [createdById], references: [id])
  createdById  Int
  proposal   Proposal[]
  isAssigned   Boolean  @default(false) // Indicates if the job has been given out
  assignedTo   Vendor?  @relation("AssignedJobs", fields: [assignedToId], references: [id])
  
  assignedToId Int?     
  createdAt DateTime @default(now())
}


model Proposal{
  id Int @default(autoincrement()) @id
  job  Job @relation(fields: [jobId],references: [id])
  jobId Int
  vendor Vendor @relation(fields: [vendorId],references: [id])
  vendorId Int
  isApproved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Role{
  ADMIN
  USER
}